{{#if navigation.available}}
<ul class="nav justify-content-between">
  <li class="nav-item">
    {{#if navigation.previous}}
    <a class="nav-link" href="{{navigation.previous}}">Précédent</a>
    {{else}}
    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Précédent</a>
    {{/if}}
  </li>
  <li class="nav-item">
    <a class="nav-link" href="{{navigation.list}}">{{navigation.position}} / {{navigation.total}}</a>
  </li>
  <li class="nav-item">
    {{#if navigation.next}}
    <a class="nav-link" href="{{navigation.next}}">Suivant</a>
    {{else}}
    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Suivant</a>
    {{/if}}
  </li>
</ul>
{{/if}}
